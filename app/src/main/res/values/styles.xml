<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="label_style">
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="bus_stop_auto_complete_style">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/switch_color_checked</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/switch_color_unchecked</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>

    </style>

    <style name="GrayText">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
